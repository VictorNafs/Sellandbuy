<section class="vh-100">
  <div class="container py-5 h-50">
    <div class="row d-flex align-items-center justify-content-center h-150">

<div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
  <h2>Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-outline mb-4">
    <%= f.email_field :email, placeholder: "email", class:"form-control form-control-lg col-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",placeholder: "Password (6 characters minimum)", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
<div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
</section>