<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
<p> Les informations suivantes sont optionnelles en inscription mais obligatoires pour les achats</p>
  <div class="field">
  <%= f.label :Ville %><br />
  <%= f.text_field :city,  autocomplete: "city" %>
</div>

<div class="field">
<%= f.label :'Code postal' %><br />
<%= f.text_field :zipcode,  autocomplete: "zipcode" %>
</div>

<div class="field">
<%= f.label :'NÂ° et Voie' %><br />
<%= f.text_field :street,  autocomplete: "street" %>
</div>

<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


