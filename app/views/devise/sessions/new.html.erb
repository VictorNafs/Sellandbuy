<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
<h2>Faouzi <label for=""></label></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-outline mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, id: "form1Example13", class:"form-control form-control-lg" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, id: "form1Example23", class: "form-control form-control-lg" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" ,id: "form1Example3" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
<div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

<%= render "devise/shared/links" %>
</div>
    </div>
  </div>
</section>
