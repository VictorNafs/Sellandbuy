<div class="container">
  <div class="row justify-content-center">
    <form class="text-light text-dark">
      <h2>Contactez-nous</h2>
      <%= form_tag send_contact_email_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :name, "Nom complet" %>
    <%= text_field_tag :name, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :email, "Adresse email" %>
    <%= email_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :message, "Message" %>
    <%= text_area_tag :message, nil, class: "form-control", rows: 5, required: true %>
  </div>

  <%= submit_tag "Envoyer", class: "btn btn-primary" %>
<% end %>
    </form>
  </div>
</div>