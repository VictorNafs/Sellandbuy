<%= link_to item_path(item), class: 'item', 'data-turbo-frame': '_top' do %>
  <h3><%= item.title %></h3>
  <%= image_tag(item.photo, width: 100) if item.photo.attached? %>
  <p>
    <strong>Category:</strong>
    <%= link_to item.category.name, item.category, class: 'category-link' %>
  </p>
  <p><%= number_to_currency(item.price) %></p>
<% end %>