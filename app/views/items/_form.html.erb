<div class="text-center">
  <%= form_with(model: item, class: "form-horizontal", role: "form") do |form| %>
    <% if item.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :price, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :price, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :category_id, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.select :category_id, options_for_select(@categories.collect {|cat| [cat.name, cat.id]}), {}, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :photo, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.file_field :photo, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "Enregistrez", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
